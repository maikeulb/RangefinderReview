<div class="section">
  <div class="container row">
  <h4 style="text-align: center">Edit Comment</h4>

  <form class="col s12" action="/comments/<%= reviewId %>" method="POST">
      <input type="hidden" name="commentId" value="<%= commentId %>">

      <div class="row">

        <div class="input-field col s12">
          <textarea class="materialize-textarea validate" type="text" value="<%= comment %>" name="comment" id="comment"></textarea>
        </div>

	<div class="input-field col s12">
          <button class="waves-effect waves-light btn red lighten-2" type="submit">Submit!
            <i class="material-icons right">send</i>
	  </button>
        </div>

      </div>
    <a href="/reviews">Go Back</a>
    </form>
  </div>
</div>
